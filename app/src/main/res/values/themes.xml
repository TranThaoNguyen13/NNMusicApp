<resources>
    <!-- Base application theme -->
    <style name="Theme.NNMusicApp" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Đảm bảo màu nền và màu chữ phù hợp với giao diện tối -->
        <item name="android:windowBackground">#121212</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <!-- Theme cho AppBarOverlay -->
    <style name="Theme.NNMusicApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Theme cho PopupOverlay -->
    <style name="Theme.NNMusicApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">#1E1E1E</item> <!-- Màu nền tối cho popup -->
        <item name="android:textColor">#FFFFFF</item> <!-- Màu chữ trắng -->
    </style>
</resources>