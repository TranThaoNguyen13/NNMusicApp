<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tvUpgradeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nâng cấp tài khoản của bạn!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvUpgradeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Với tài khoản VIP, bạn có thể nghe nhạc chất lượng cao và không có quảng cáo."
        android:textSize="16sp"
        android:layout_marginBottom="30dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnUpgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nâng cấp ngay"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#fff"
        android:layout_marginTop="20dp"/>

</LinearLayout>
