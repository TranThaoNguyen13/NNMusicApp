<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#121212"
    android:gravity="center">

    <!-- Tiêu đề với hiệu ứng shadow -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanh toán MoMo"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:shadowColor="#66000000"
        android:shadowRadius="2"
        android:shadowDx="1"
        android:shadowDy="1"
        android:layout_marginBottom="24dp" />

    <!-- Container thông tin thanh toán với bo góc và gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/payment_background"
        android:padding="20dp"
        android:layout_marginBottom="24dp"
        android:elevation="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp">

        <!-- Số tiền -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tiền: 50,000 VND"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Phương thức -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phương thức: MoMo"
            android:textSize="16sp"
            android:textColor="#B0B0B0"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Container nút với bo góc và gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <!-- Nút Hủy với gradient -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Hủy"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/cancel_button_background"
            android:padding="12dp"
            android:layout_marginEnd="16dp"
            android:elevation="6dp" />

        <!-- Nút Xác nhận với gradient -->
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Xác nhận"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/confirm_button_background"
            android:padding="12dp"
            android:elevation="6dp" />
    </LinearLayout>
</LinearLayout>